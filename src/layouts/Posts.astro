---
import { Image } from "astro:assets";
import config from "@/config/config.json";
import { getSinglePage } from "@/lib/contentParser.astro";
const { className, posts } = Astro.props;
---

<div class={`row gy-5 gx-4 ${className}`}>
  {
    posts.map((post: any) => (
      <div class="col-12 sm:col-6">
        {post.data.image && (
          <a
            href={`/${post.slug}`}
            class="rounded-lg block hover:text-primary overflow-hidden group"
          >
            <Image
              class="group-hover:scale-[1.03] transition duration-300 w-full h-auto object-cover"
              src={post.data.image}
              alt={post.data.title}
              width={400}
              height={200}
            />
          </a>
        )}
        <h3 class="h5 mt-4 text-center">
          <a
            href={`/${post.slug}`}
            class="block hover:text-primary transition duration-300"
          >
            {post.data.title}
          </a>
        </h3>
      </div>
    ))
  }
</div>
