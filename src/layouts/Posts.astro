---
import { Image } from "astro:assets";
import config from "@/config/config.json";
import { getSinglePage } from "@/lib/contentParser.astro";
const { className, posts, fluid } = Astro.props;
---

<div
  class={`row gy-5 gx-4 ${className} ${posts.length == 1 ? "justify-center" : ""} `}
>
  {
    posts.map((post: any, i: number) => (
      <div class={i === 0 && fluid != false ? "col-12" : "col-12 sm:col-6"}>
        {post.data.image && (
          <a
            href={`/${post.slug}`}
            class="rounded-lg block hover:text-primary overflow-hidden group max-w-[800px] mx-auto"
          >
            <Image
              class="group-hover:scale-[1.03] transition duration-300 w-full h-auto object-cover"
              src={post.data.image}
              alt={post.data.title}
              width={i === 0 ? 800 : 400}
              height={i === 0 ? 400 : 200}
            />
          </a>
        )}
      </div>
    ))
  }
</div>
